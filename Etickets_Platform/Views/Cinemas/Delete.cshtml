@model Cinema
@{
    ViewData["Title"] = "delete Cinema";
}

<div class="row  text">
    <div class="col-md-8 offset-2">
        <p>
            <h1> delete confirmation @Model.Name </h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">

           
                    <div class="form-group text-center">
                        <img id="LogoPreview"  class="border-info rounded-circle" style="max-width:150px" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Logo" class="control-label"></label>
                        <input asp-for="Logo"  class="form-control" readonly />
                        <span asp-validation-for="Logo"  class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="custom-control-label"></label>
                        <input asp-for="Name" class="form-control"  readonly />
                        <span asp-validation-for="Name" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="custom-control-label"></label>
                        <input asp-for="Description" class="form-control" readonly  />
                        <span asp-validation-for="Description"class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <form asp-action="Delete">
                            <input asp-for="id" type="hidden" />
                            <input type="submit" value="confirmed" class="btn btn-danger float-right" />

                        </form>

                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
              

            </div>

        </div>
    </div>
</div>

@section scripts{
    <script>
        $(document).ready(function () {

            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();

        })
       
    </script>
}